{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "files": {
    "includes": ["**", "!**/node_modules", "!**/.next", "!**/dist", "!**/build"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": {
          "level": "off"
        },
        "noArrayIndexKey": {
          "level": "warn"
        }
      },
      "correctness": {
        "useUniqueElementIds": {
          "level": "off"
        }
      },
      "a11y": {
        "noSvgWithoutTitle": {
          "level": "warn"
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    },
    "assist": {
      "enabled": true
    }
  }
}
